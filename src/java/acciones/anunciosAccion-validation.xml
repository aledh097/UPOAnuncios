<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="titulo">
        <field-validator type="requiredstring">
            <message>Título requerido</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">15</param>
            <message>El título debe ser menor de 15 caracteres</message>
        </field-validator>
    </field>   
    <field name="descripcion">
        <field-validator type="requiredstring">
            <message>Descripción requerida</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">45</param>
            <message>La descripción debe ser menor de 45 caracteres</message>
        </field-validator>
    </field>   
    <field name="precio">
        <field-validator type="requiredstring">
            <message>Precio requerido</message>
        </field-validator>
    </field>   
</validators>


