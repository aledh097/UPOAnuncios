<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="correoElectronico">
        <field-validator type="requiredstring">
            <message>Usuario requerido</message>
        </field-validator>
        <field-validator type="email"> 
            <message>El formato del correo es incorrecto</message> 
        </field-validator> 
    </field>   
    <field name="contrasenya">
        <field-validator type="requiredstring">
            <message>Contraseña requerida</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">6</param>
            <message>La contraseña es incorrecta</message>
        </field-validator>
    </field>   
</validators>


